generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model adoption_events {
  id                                        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  animal_id                                 String   @db.Uuid
  adopter_id                                String   @db.Uuid
  status                                    String   @db.VarChar(30)
  information                               String?
  triggered_by                              String   @db.Uuid
  created_at                                DateTime @default(now()) @db.Timestamptz(6)
  users_adoption_events_adopter_idTousers   users    @relation("adoption_events_adopter_idTousers", fields: [adopter_id], references: [id])
  animals                                   animals  @relation(fields: [animal_id], references: [id])
  users_adoption_events_triggered_byTousers users    @relation("adoption_events_triggered_byTousers", fields: [triggered_by], references: [id])

  @@index([adopter_id])
  @@index([animal_id])
  @@index([created_at(sort: Desc)])
  @@index([status])
}

model animal_events {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  animal_id    String   @db.Uuid
  event_type   String   @db.VarChar(50)
  description  String
  details      Json?
  triggered_by String   @db.Uuid
  created_at   DateTime @default(now()) @db.Timestamptz(6)
  animals      animals  @relation(fields: [animal_id], references: [id], onDelete: Cascade)
  users        users    @relation(fields: [triggered_by], references: [id])

  @@index([animal_id])
  @@index([created_at(sort: Desc)])
  @@index([event_type])
}

model animal_medical_records {
  id                 String              @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  animal_id          String              @db.Uuid
  record_type        String              @db.VarChar(50)
  description        String
  veterinarian       String?             @db.VarChar
  record_date        DateTime            @db.Date
  next_due_date      DateTime?           @db.Date
  details            Json?
  document_id        String?             @db.Uuid
  created_by         String?             @db.Uuid
  clinic_id          String?             @db.Uuid
  created_at         DateTime            @default(now()) @db.Timestamptz(6)
  animals            animals             @relation(fields: [animal_id], references: [id], onDelete: Cascade)
  users              users?              @relation(fields: [created_by], references: [id])
  documents          documents?          @relation(fields: [document_id], references: [id])
  veterinary_clinic  veterinary_clinics? @relation(fields: [clinic_id], references: [id], onDelete: SetNull)

  @@index([animal_id])
  @@index([record_date(sort: Desc)])
  @@index([record_type])
  @@index([clinic_id])
}

model animal_photos {
  id             String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  animal_id      String   @db.Uuid
  image_url      String
  is_profile_pic Boolean  @default(false)
  photo_order    Int      @default(0)
  uploaded_by    String?  @db.Uuid
  created_at     DateTime @default(now()) @db.Timestamptz(6)
  animals        animals  @relation(fields: [animal_id], references: [id], onDelete: Cascade)
  users          users?   @relation(fields: [uploaded_by], references: [id])

  @@index([animal_id])
  @@index([animal_id, is_profile_pic])
}

model animal_weights {
  id          BigInt   @id @default(autoincrement())
  animal_id   String   @db.Uuid
  value       Decimal  @db.Decimal(6, 2)
  unit        String   @default("kg") @db.VarChar(10)
  recorded_by String   @db.Uuid
  date_time   DateTime @default(now()) @db.Timestamptz(6)
  notes       String?
  animals     animals  @relation(fields: [animal_id], references: [id], onDelete: Cascade)
  users       users    @relation(fields: [recorded_by], references: [id], onDelete: SetNull)

  @@index([animal_id, date_time(sort: Desc)])
}

model animals {
  id                                    String                   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name                                  String                   @db.VarChar
  description                           String?
  shelter_id                            String                   @db.Uuid
  species_id                            Int?
  breed_id                              Int?
  sex_id                                Int?
  size                                  String?                  @db.VarChar(20)
  birth_date                            DateTime?                @db.Date
  microchip_id                          String?                  @unique @db.VarChar
  castrated                             Boolean?
  is_available_for_adoption             Boolean                  @default(false)
  health_status                         Json?
  behavior                              Json?
  appearance                            Json
  created_at                            DateTime                 @default(now()) @db.Timestamptz(6)
  updated_at                            DateTime                 @default(now()) @db.Timestamptz(6)
  created_by                            String?                  @db.Uuid
  updated_by                            String?                  @db.Uuid
  status_id                             Int?
  deleted_at                            DateTime?                @db.Timestamptz(6)
  adoption_events                       adoption_events[]
  animal_events                         animal_events[]
  animal_medical_records                animal_medical_records[]
  animal_photos                         animal_photos[]
  animal_weights                        animal_weights[]
  catalogs_animals_breed_idTocatalogs   catalogs?                @relation("animals_breed_idTocatalogs", fields: [breed_id], references: [id])
  users_animals_created_byTousers       users?                   @relation("animals_created_byTousers", fields: [created_by], references: [id])
  shelters                              shelters                 @relation(fields: [shelter_id], references: [id])
  catalogs_animals_sex_idTocatalogs     catalogs?                @relation("animals_sex_idTocatalogs", fields: [sex_id], references: [id])
  catalogs_animals_species_idTocatalogs catalogs?                @relation("animals_species_idTocatalogs", fields: [species_id], references: [id])
  catalogs_animals_status_idTocatalogs  catalogs?                @relation("animals_status_idTocatalogs", fields: [status_id], references: [id])
  users_animals_updated_byTousers       users?                   @relation("animals_updated_byTousers", fields: [updated_by], references: [id])
  documents                             documents[]
  favorites                             favorites[]
  prescriptions                         prescriptions[]
  reports                               reports[]

  @@index([breed_id])
  @@index([deleted_at])
  @@index([microchip_id])
  @@index([name])
  @@index([sex_id])
  @@index([shelter_id])
  @@index([species_id])
  @@index([status_id])
}

model audit_logs {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id    String?  @db.Uuid
  action     String   @db.VarChar(50)
  table_name String   @db.VarChar(100)
  record_id  String   @db.Uuid
  old_values Json?
  new_values Json?
  details    Json?
  created_at DateTime @default(now()) @db.Timestamptz(6)
  users      users?   @relation(fields: [user_id], references: [id])

  @@index([created_at(sort: Desc)])
  @@index([table_name])
  @@index([user_id])
}

model catalogs {
  id                                   Int         @id @default(autoincrement())
  category                             String      @db.VarChar(50)
  name                                 String      @db.VarChar(100)
  description                          String?
  parent_id                            Int?        @map("parent_id")
  is_active                            Boolean     @default(true)
  created_at                           DateTime    @default(now()) @db.Timestamptz(6)

  parent                               catalogs?   @relation("catalog_hierarchy", fields: [parent_id], references: [id], onDelete: Cascade)
  children                             catalogs[]  @relation("catalog_hierarchy")

  animals_animals_breed_idTocatalogs   animals[]   @relation("animals_breed_idTocatalogs")
  animals_animals_sex_idTocatalogs     animals[]   @relation("animals_sex_idTocatalogs")
  animals_animals_species_idTocatalogs animals[]   @relation("animals_species_idTocatalogs")
  animals_animals_status_idTocatalogs  animals[]   @relation("animals_status_idTocatalogs")

  @@unique([category, name])
  @@index([category])
  @@index([name])
  @@index([parent_id])
}

model documents {
  id                     String                   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  animal_id              String                   @db.Uuid
  document_type          String                   @db.VarChar(50)
  file_url               String
  file_name              String?                  @db.VarChar(255)
  mime_type              String?                  @db.VarChar(50)
  description            String?
  issued_date            DateTime?                @db.Date
  data                   Json?
  uploaded_by            String                   @db.Uuid
  created_at             DateTime                 @default(now()) @db.Timestamptz(6)
  animal_medical_records animal_medical_records[]
  animals                animals                  @relation(fields: [animal_id], references: [id], onDelete: Cascade)
  users                  users                    @relation(fields: [uploaded_by], references: [id])

  @@index([animal_id])
  @@index([created_at(sort: Desc)])
  @@index([document_type])
}

model favorites {
  user_id    String   @db.Uuid
  animal_id  String   @db.Uuid
  created_at DateTime @default(now()) @db.Timestamptz(6)
  animals    animals  @relation(fields: [animal_id], references: [id], onDelete: Cascade)
  users      users    @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@id([user_id, animal_id])
  @@index([animal_id])
  @@index([user_id])
}

model medications {
  id            Int             @id @default(autoincrement())
  name          String          @db.VarChar(200)
  shelter_id    String?         @db.Uuid
  is_active     Boolean         @default(true)
  created_at    DateTime        @default(now()) @db.Timestamptz(6)
  shelters      shelters?       @relation(fields: [shelter_id], references: [id])
  prescriptions prescriptions[]

  @@index([is_active])
  @@index([name])
  @@index([shelter_id])
}

model prescription_tasks {
  id              String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  prescription_id String        @db.Uuid
  scheduled_date  DateTime      @db.Date
  scheduled_time  DateTime      @db.Time(6)
  administered_at DateTime?     @db.Timestamptz(6)
  administered_by String?       @db.Uuid
  is_completed    Boolean       @default(false)
  notes           String?
  created_at      DateTime      @default(now()) @db.Timestamptz(6)
  users           users?        @relation(fields: [administered_by], references: [id])
  prescriptions   prescriptions @relation(fields: [prescription_id], references: [id], onDelete: Cascade)

  @@index([administered_by])
  @@index([is_completed])
  @@index([prescription_id])
  @@index([scheduled_date])
}

model prescriptions {
  id                 String               @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  animal_id          String               @db.Uuid
  medication_id      Int
  dosage             String               @db.VarChar(100)
  route              String               @db.VarChar(50)
  interval_hours     Int
  start_date         DateTime             @db.Date
  start_time         DateTime?            @db.Time(6)
  duration_days      Int?
  is_continuous      Boolean              @default(false)
  is_completed       Boolean              @default(false)
  description        String?
  prescribed_by      String?              @db.Uuid
  recipe_id          String?              @db.Uuid
  created_at         DateTime             @default(now()) @db.Timestamptz(6)
  updated_at         DateTime             @default(now()) @db.Timestamptz(6)
  prescription_tasks prescription_tasks[]
  animals            animals              @relation(fields: [animal_id], references: [id], onDelete: Cascade)
  medications        medications          @relation(fields: [medication_id], references: [id])
  users              users?               @relation(fields: [prescribed_by], references: [id])

  @@index([animal_id])
  @@index([is_completed])
  @@index([medication_id])
  @@index([prescribed_by])
  @@index([start_date])
}

model reports {
  id                               String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  animal_id                        String?   @db.Uuid
  reporter_id                      String    @db.Uuid
  report_type                      String    @db.VarChar(20)
  location                         Json
  description                      String
  matched_report_id                String?   @db.Uuid
  matched_by                       String?   @db.Uuid
  matched_at                       DateTime? @db.Timestamptz(6)
  resolved                         Boolean   @default(false)
  resolved_date                    DateTime? @db.Timestamptz(6)
  resolution_notes                 String?
  created_at                       DateTime  @default(now()) @db.Timestamptz(6)
  updated_at                       DateTime  @default(now()) @db.Timestamptz(6)
  animals                          animals?  @relation(fields: [animal_id], references: [id])
  users_reports_matched_byTousers  users?    @relation("reports_matched_byTousers", fields: [matched_by], references: [id])
  reports                          reports?  @relation("reportsToreports", fields: [matched_report_id], references: [id])
  other_reports                    reports[] @relation("reportsToreports")
  users_reports_reporter_idTousers users     @relation("reports_reporter_idTousers", fields: [reporter_id], references: [id], onDelete: SetNull)

  @@index([animal_id])
  @@index([created_at(sort: Desc)])
  @@index([report_type])
  @@index([resolved])
}

model roles {
  id          Int      @id @default(autoincrement())
  name        String   @unique @db.VarChar(50)
  description String?
  permissions Json     @default("{}")
  created_at  DateTime @default(now()) @db.Timestamptz(6)
  users       users[]
}

model shelters {
  id          String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name        String        @db.VarChar
  description String?
  owner_id    String        @db.Uuid
  location    Json?
  phone       String?       @db.VarChar
  email       String?       @db.VarChar
  website     String?       @db.VarChar
  is_active   Boolean       @default(true)
  created_at  DateTime      @default(now()) @db.Timestamptz(6)
  updated_at  DateTime      @default(now()) @db.Timestamptz(6)
  deleted_at  DateTime?     @db.Timestamptz(6)
  animals     animals[]
  medications medications[]
  users       users         @relation(fields: [owner_id], references: [id])

  @@index([deleted_at])
  @@index([is_active])
  @@index([owner_id])
}

model veterinary_clinics {
  id                     String                   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name                   String                   @db.VarChar
  address                Json?
  phone                  String?                  @db.VarChar
  email                  String?                  @db.VarChar
  crmv                   String?                  @db.VarChar
  description            String?
  is_active              Boolean                  @default(true)
  created_at             DateTime                 @default(now()) @db.Timestamptz(6)
  updated_at             DateTime                 @default(now()) @db.Timestamptz(6)
  deleted_at             DateTime?                @db.Timestamptz(6)
  veterinarians          users[]
  animal_medical_records animal_medical_records[]

  @@index([name])
  @@index([is_active])
  @@index([deleted_at])
}

model users {
  id                                                  String                   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name                                                String                   @db.VarChar
  email                                               String                   @unique @db.VarChar
  password                                            String                   @db.VarChar
  phone                                               String?                  @db.VarChar
  address                                             Json?
  document_id                                         String?                  @unique @db.VarChar
  role_id                                             Int
  clinic_id                                           String?                  @db.Uuid
  details                                             Json?
  created_at                                          DateTime                 @default(now()) @db.Timestamptz(6)
  updated_at                                          DateTime                 @default(now()) @db.Timestamptz(6)
  deleted_at                                          DateTime?                @db.Timestamptz(6)
  adoption_events_adoption_events_adopter_idTousers   adoption_events[]        @relation("adoption_events_adopter_idTousers")
  adoption_events_adoption_events_triggered_byTousers adoption_events[]        @relation("adoption_events_triggered_byTousers")
  animal_events                                       animal_events[]
  animal_medical_records                              animal_medical_records[]
  animal_photos                                       animal_photos[]
  animal_weights                                      animal_weights[]
  animals_animals_created_byTousers                   animals[]                @relation("animals_created_byTousers")
  animals_animals_updated_byTousers                   animals[]                @relation("animals_updated_byTousers")
  audit_logs                                          audit_logs[]
  documents                                           documents[]
  favorites                                           favorites[]
  prescription_tasks                                  prescription_tasks[]
  prescriptions                                       prescriptions[]
  reports_reports_matched_byTousers                   reports[]                @relation("reports_matched_byTousers")
  reports_reports_reporter_idTousers                  reports[]                @relation("reports_reporter_idTousers")
  shelters                                            shelters[]
  roles                                               roles                    @relation(fields: [role_id], references: [id])
  veterinary_clinic                                   veterinary_clinics?      @relation(fields: [clinic_id], references: [id], onDelete: SetNull)

  @@index([deleted_at])
  @@index([email])
  @@index([phone])
  @@index([role_id])
  @@index([clinic_id])
}
